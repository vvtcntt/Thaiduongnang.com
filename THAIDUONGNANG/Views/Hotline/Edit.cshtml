@model THAIDUONGNANG.Models.tblHotline

@{
    ViewBag.Title = "Edit"; Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<script type="text/javascript">
    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }

    $(function () {
        createEditor('vi', 'Maps');
    });

</script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)


    <div class="Nvar_Content_Detail">
        <div class="Left_Nvar">
            <img src="/Content/Admin/Icon/folder.png" alt="Danh mục sản phẩm" />Edit Hotline
        </div>

    </div>
    <div class="Content_Content_Detail">

        <div class="tr_1">
            <div class="left_tr1">
                <span>Name :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Name, new { @class = "Leght_2" })

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Motbile :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Mobile, new { @class = "Leght_2" })

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Hotline :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Hotline, new { @class = "Leght_2" })

            </div>
        </div>


        <div class="tr_1">
            <div class="left_tr1">
                <span>Address :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Address, new { @class = "Leght_2" })

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Email :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Email, new { @class = "Leght_2" })

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Maps :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextAreaFor(p => p.Maps, new { @class = "Leght_2" })

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Type :</span>
            </div>
            <div class="Right_tr1">
                @Html.RadioButtonFor(p => p.Type, "1", new {}) : Chi nhánh
                @Html.RadioButtonFor(p => p.Type, "2", new { }): Trụ sở chính
            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Ord:</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Ord)

            </div>
        </div>


        <div class="tr_1">
            <div class="left_tr1">
                <span>Active :</span>
            </div>
            <div class="Right_tr1">
                @Html.RadioButtonFor(p => p.Active, "true", new { @id = "Active", @checked="checked" }) : Yes
                @Html.RadioButtonFor(p => p.Active, "false", new { @id = "Active" }): No
            </div>
        </div>


        <div class="tr_1">
            <div class="left_tr1">
            </div>
            <div class="Right_tr1">
                <button type="submit" id="btnAdd" name="btnAdd" class="btnAdd">Save</button>

            </div>
        </div>
    </div>
}
